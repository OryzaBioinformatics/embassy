application: enetphos [
  documentation: "Reports ser, thr and tyr phosphorylation sites in
                  eukaryotic proteins"
  groups: "Protein:Modifications"
  embassy: "cbstools"
  external: "netphos CBStools website http://www.cbs.dtu.dk/services/"
  relations: "EDAM:0000751 topic Phosphorylation"
  relations: "EDAM:0000417 operation Protein post-translation modification
                                     prediction"
]

section: input [
  information: "Input section"
  type: "page"
]

  seqset: sequence [
    parameter: "Y"
    type: "gapprotein"
    aligned: "Y"
    relations: "EDAM:0001384 data Sequence alignment (protein)"
  ]

endsection: input

section: required [
  information: "Required section"
  type: "page"
]

endsection: required

section: additional [
  information: "Additional section"
  type: "page"
]

  float: cutoff [
    additional: "Y"
    default: "0.0"
    information: "Report only scores above this value"
    relations: "EDAM:0002146 data Threshold"
  ]

endsection: additional

section: advanced [
  information: "Advanced section"
  type: "page"
]

  boolean: plot [
    default: "N"
    information: "Produce graphics"
    relations: "EDAM:0002527 data Parameter or primitive"
  ]

  boolean: two [
    default: "N"
    information: "Run generic predictions only"
    relations: "EDAM:0002527 data Parameter or primitive"
  ]

  boolean: kinase [
    default: "N"
    information: "Run kinase-specific only"
    relations: "EDAM:0002527 data Parameter or primitive"
  ]

  list: residue [
    header:   "Residue predictions"
    default: "all"
    minimum: "1"
    maximum: "1"
    values: "all:all, serine:serine, threonine:threonine, tyrosine:tyrosine"
    delimiter: ","
    codedelimiter: ":"
    information: "Residues to predict with"
    relations: "EDAM:0002527 data Parameter or primitive"
  ]

  boolean: gff [
    default: "N"
    information: "Produce gff output"
    relations: "EDAM:0002527 data Parameter or primitive"
  ]

  boolean: best [
    default: "N"
    information: "Report only the highest score for each residue"
    relations: "EDAM:0002527 data Parameter or primitive"
  ]

  boolean: addseq [
    default: "N"
    information: "Add sequence to gff output"
    relations: "EDAM:0002152 data Rendering parameter"
  ]

endsection: advanced

section: output [
  information: "Output section"
  type: "page"
]

  outfile: outfile [
    parameter: "Y"
    knowntype: "enetphos output"
    relations:  "EDAM:0001324 data Protein features
                                   (post-translation modification sites)"
  ]

endsection: output
