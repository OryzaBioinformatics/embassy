application: eprop [
  documentation: "Reports propeptide cleavage sites in proteins"
  groups: "Protein:Modifications"
  embassy: "cbstools"
  external: "prop CBStools website http://www.cbs.dtu.dk/services/"
  relations: "EDAM:0000601 topic Protein modifications"
  relations: "EDAM:0000422 operation Protein cleavage site prediction"
]

section: input [
  information: "Input section"
  type: "page"
]

  seqset: sequence [
    parameter: "Y"
    type: "gapprotein"
    aligned: "Y"
    relations: "EDAM:0001384 data Sequence alignment (protein)"
  ]

endsection: input

section: required [
  information: "Required section"
  type: "page"
]

endsection: required

section: advanced [
  information: "Advanced section"
  type: "page"
]

  boolean: plot [
    default: "N"
    information: "Produce graphics"
    relations: "EDAM:0002527 data Parameter or primitive"
  ]

  boolean: pcprediction [
    default: "N"
    information: "Perform proprotein convertase prediction"
    relations: "EDAM:0002527 data Parameter or primitive"
  ]

  boolean: signalp [
    default: "N"
    information: "Include signal peptide cleavage site prediction"
    relations: "EDAM:0002527 data Parameter or primitive"
  ]

endsection: advanced

section: output [
  information: "Output section"
  type: "page"
]

  outfile: outfile [
    parameter: "Y"
    knowntype: "eprop output"
    relations:  "EDAM:0001323 data Protein features (cleavage sites)"
  ]

endsection: output
