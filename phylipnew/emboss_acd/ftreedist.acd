application: ftreedist [
  documentation: "Distances between trees"
  groups: "Phylogeny:Consensus"
  embassy: "phylipnew"
  relations:  "EDAM:0000084 topic Phylogenetics"
  relations:  "EDAM:0000557 operation Phylogenetic tree distances calculation"
]


section: input [
  information: "Input section"
  type: "page"
]

  tree: intreefile [
    parameter: "Y"
    knowntype: "newick"
    information: "Phylip tree file"
    relations:  "EDAM:0000872 data Phylogenetic tree"
  ]

endsection: input

section: additional [
  information: "Additional section"
  type: "page"
]

  list: dtype [
    additional: "Y"
    information: "Distance type"
    values: "s:Symmetric difference; b:Branch score distance"
    default: "b"
    relations: "EDAM:0002527 data Parameter or primitive"
  ]

  list: pairing [
    additional: "Y"
    information: "Tree pairing method"
    values: "a:Distances between adjacent pairs in tree file;
             p:Distances between all possible pairs in tree file"
    default: "a"
    relations: "EDAM:0002527 data Parameter or primitive"
  ]

  list: style [
    additional: "Y"
    information: "Distances output option"
    values: "f:Full matrix; v:Verbose, one pair per line;
             s:Sparse, one pair per line"
    default: "v"
    relations: "EDAM:0002527 data Parameter or primitive"
  ]

  boolean: noroot [
    additional: "Y"
    default: "N"
    information: "Trees to be treated as rooted"
    relations: "EDAM:0002527 data Parameter or primitive"
  ]

  integer: outgrno [
    additional: "Y"
    minimum: "0"
    default: "0"
    information: "Species number to use as outgroup"
    relations: "EDAM:0002527 data Parameter or primitive"
  ]

endsection: additional

section: output [
  information: "Output section"
  type: "page"
]

  outfile: outfile [
    parameter: "Y"
    knowntype: "treedist output"
    information: "Phylip treedist program output file"
    relations:  "EDAM:0001442 data Phylogenetic report (tree distances)"
  ]

  boolean: progress [
    additional: "Y"
    default: "Y"
    information: "Print indications of progress of run"
    relations: "EDAM:0002527 data Parameter or primitive"
  ]

endsection: output
