application: fconsense [
  documentation: "Majority-rule and strict consensus tree"
  groups: "Phylogeny:Consensus"
  embassy: "phylipnew"
  relations:  "EDAM:0000191 topic Phylogeny reconstruction"
  relations:  "EDAM:0000555 operation Consensus phylogenetic tree construction"
]

section: input [
  information: "Input section"
  type: "page"
]

  tree: intreefile [
    parameter: "Y"
    knowntype: "newick"
    information: "Phylip tree file"
    relations:  "EDAM:0000872 data Phylogenetic tree"
  ]

endsection: input

section: additional [
  information: "Additional section"
  type: "page"
]

  list: method [
    additional: "Y"
    minimum: "1"
    maximum: "1"
    information: "Consensus method"
    values: "s:strict consensus tree; mr:Majority Rule; mre:Majority
             Rule (extended); ml:Minimum fraction (0.5 to 1.0)"
    default: "mre"
    relations: "EDAM:0002527 data Parameter or primitive"
  ]

  float: mlfrac [
    additional: "@($(method)==ml)"
    minimum: "0.5"
    maximum: "1.0"
    default: "0.5"
    information: "Fraction (l) of times a branch must appear"
    relations: "EDAM:0002527 data Parameter or primitive"
  ]

  toggle: root [
    additional: "Y"
    default: "N"
    information: "Trees to be treated as Rooted"
    relations: "EDAM:0002527 data Parameter or primitive"
  ]

  integer: outgrno [
    additional: "Y"
    minimum: "0"
    default: "0"
    information: "Species number to use as outgroup"
    relations: "EDAM:0002527 data Parameter or primitive"
  ]

endsection: additional

section: output [
  information: "Output section"
  type: "page"
]

  outfile: outfile [
    parameter: "Y"
    knowntype: "consense output"
    information: "Phylip consense program output file"
    relations:  "EDAM:0000872 data Phylogenetic tree"
  ]

  toggle: trout [
    additional: "Y"
    default: "Y"
    information: "Write out trees to tree file"
    relations: "EDAM:0002527 data Parameter or primitive"
  ]

  outfile: outtreefile [
    additional: "$(trout)"
    extension: "treefile"
    information: "Phylip tree output file (optional)"
    knowntype: "newick tree"
    nullok: "Y"
    relations:  "EDAM:0000872 data Phylogenetic tree"
  ]

  boolean: progress [
    additional: "Y"
    default: "Y"
    information: "Print indications of progress of run"
    relations: "EDAM:0002527 data Parameter or primitive"
  ]

  boolean: treeprint [
    additional: "Y"
    default: "Y"
    information: "Print out tree"
    relations: "EDAM:0002527 data Parameter or primitive"
  ]

  boolean: prntsets [
    additional: "Y"
    default: "Y"
    information: "Print out the sets of species"
    relations: "EDAM:0002527 data Parameter or primitive"
  ]

endsection: output
