application: ehmmconvert [
  documentation: "Convert between profile HMM file formats"
  groups: "HMM"
  embassy: "hmmernew"
  external: "hmmconvert HMMER 2.3.2 available from http://hmmer.wustl.edu/"
  relations:  "EDAM:0000188 topic Sequence profiles and HMMs"
  relations:  "EDAM:0002409 operation Data file processing"
]

section: input [
  information: "Input section"
  type: "page"
]

  infile: oldhmmfile [
    parameter: "Y"
    knowntype: "hmm"
    information: "HMMER hidden markov model file"
    help: "HMM input file"
    relations:  "EDAM:0001364 data Hidden Markov model"
  ]

endsection: input

section: required [
  information: "Required section"
  type: "page"
]

  list: format [
    standard: "Y"
    default: "A"
    minimum: "1"
    maximum: "1"
    values: "A:ascii,B:binary,G:gcg,X:xsw"
    delimiter: ","
    codedelimiter: ":"
    header: "HMM format"
    information: "Select format"
    button: "Y"
    relations: "EDAM:0002527 data Parameter or primitive"
  ]

endsection: required

section: advanced [
  information: "Advanced section"
  type: "page"
]

endsection: advanced

section: output [
  information: "Output section"
  type: "page"
]

  outfile: newhmmfile [
    parameter: "Y"
    knowntype: "hmm"
    help: "HMM output file"
    append: "N"
    information: "HMMER hidden markov model output file"
    relations:  "EDAM:0001364 data Hidden Markov model"
  ]

endsection: output
